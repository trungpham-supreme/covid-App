<%- include('../_layouts/adminheader') %>
	<div class="container">
		<h1 class="mb-4">Tạo bài đăng</h1>
		<form action="/admin/create" method="post" enctype="multipart/form-data" >
			<div class="form-group">
				<label for="title" > Tiêu đề</label>
				<input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
			</div>
			<div class="form-group">
			  <label for="description">Tóm tắt</label>
			  <textarea required name="description" id="description" class="form-control"><%= article.description %></textarea>
			</div>
			<div class="form-group">
			  <label for="markdown">Nội dung</label>
			  <textarea required name="markdown" id="markdown" class="form-control" style="height: 350px;"><%= article.markdown %></textarea>
			</div>
			<div class="form-group">
				<label for="file">Ảnh</label>
			  <input type="file" class="form-control-file" id="file" name="file" >
			</div>
			<div class="form-group">
			  <label for="markdown">Chú thích ảnh</label>
			  <textarea  name="cmtImage" id="cmtImage" class="form-control"><%= article.cmtImage %></textarea>
			</div>
			<a href="/admin/articles" class="btn btn-secondary">Thoát</a>
			<button type="submit" class="btn btn-primary">Tạo</button>
		</form>

	</div>

<%- include('../_layouts/adminfooter') %>