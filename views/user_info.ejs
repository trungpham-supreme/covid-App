<%- include('./_layouts/adminheader') %>


	<div class="container">
		<div class="mt-4 pb-4">
			<h1 class="">Thông tin tài khoản</h1>
			<%- include('./partials/messages'); %>
		<form action="/users/info/?_method=PUT" method="POST">

			<div class="form-group">
				<label for="name"> Họ và Tên</label>
				<input   value="<%= user.name %>" type="text" name="name" id="name" class="form-control">
			</div>
			<div class="form-group">
			  <label for="description">Email</label>
			  <input required value="<%= user.email %>" type="text" name="title" id="title" class="form-control" readonly>
			</div>

			<div class="form-group">
			  <label for="password">Mật khẩu mới</label>
			  <input value="<%= user.password %>" type="password" name="password" id="password" class="form-control">
			</div>

			<div class="form-group">
			  <label for="password">Nhập lại mật khẩu</label>
			  <input value="<%= user.password %>" type="password" name="password2" id="password2" class="form-control">
			</div>

			<div class="pb-2"></div>

			<button type="submit" class="btn btn-primary btn-block mt-4">Cập nhật</button>

		</form>
		</div>
	
	</div>

<%- include('./_layouts/adminfooter') %>